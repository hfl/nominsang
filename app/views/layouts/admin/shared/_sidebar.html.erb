  <aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="<%= admin_root_path %>" class="brand-link">
      <%= image_tag "AdminLTELogo.png", class: "brand-image img-circle elevation-3", style: "opacity: .8"%>
      <span class="brand-text font-weight-light">NOMINSANG 3</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
      <!-- Sidebar user panel (optional) -->
      <div class="user-panel mt-3 pb-3 mb-3 d-flex">
        <div class="image">
          <%= image_tag "user2-160x160.jpg", class: "img-circle elevation-2" %>
        </div>
        <div class="info">
          <a href="#" class="d-block"><%= current_user.email %></a>
        </div>
      </div>

      <!-- SidebarSearch Form -->
      <div class="form-inline">
        <div class="input-group" data-widget="sidebar-search">
          <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
          <div class="input-group-append">
            <button class="btn btn-sidebar">
              <i class="fas fa-search fa-fw"></i>
            </button>
          </div>
        </div>
      </div>

      <!-- Sidebar Menu -->
      <nav class="mt-2">
        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
          <!-- Add icons to the links using the .nav-icon class
               with font-awesome or any other icon font library -->
          <li class="nav-item">
            <a href="<%= admin_root_path %>" class="nav-link<% if controller.controller_name == "dashboard" %> active<% end %>">
              <i class="nav-icon fas fa-tachometer-alt"></i>
              <p>
                <%= t(".dashboard") %>
              </p>
            </a>
          </li>
          <li class="nav-item<% if ["experts", "books"].include?(controller.controller_name) %> menu-open<% end %>">
            <a href="#" class="nav-link<% if ["experts", "books"].include?(controller.controller_name) %> active<% end %>">
              <i class="nav-icon fas fa-th"></i>
              <p>
                <%= t(".data") %>
                <i class="right fas fa-angle-left"></i>
              </p>
            </a>
            <ul class="nav nav-treeview">
              <li class="nav-item">
                <a href="<%= admin_experts_path %>" class="nav-link<% if controller.controller_name == "experts" %> active<% end %>">
                  <i class="nav-icon fa-solid fa-chalkboard-user"></i>
                  <p><%= t(".experts") %></p>
                  <span class="right badge badge-danger">New</span>
                </a>
              </li>
              <li class="nav-item">
                <a href="#" class="nav-link">
                  <i class="fa-solid fa-graduation-cap nav-icon"></i>
                  <p><%= t(".papers") %></p>
                </a>
              </li>
              <li class="nav-item">
                <a href="#" class="nav-link">
                  <i class="fa-solid fa-photo-film nav-icon"></i>
                  <p><%= t(".journals") %></p>
                </a>
              </li>
              <li class="nav-item">
                <a href="#" class="nav-link">
                  <i class="fa-solid fa-book nav-icon"></i>
                  <p><%= t(".books") %></p>
                </a>
              </li>
              <li class="nav-item">
                <a href="#" class="nav-link">
                  <i class="fa-solid fa-book-journal-whills nav-icon"></i>
                  <p><%= t(".ancient_books") %></p>
                </a>
              </li>
            </ul>
          </li>
          <li class="nav-item">
            <a href="<%= admin_users_path %>" class="nav-link<%= " active" if controller.controller_name == "users" %>">
              <i class="nav-icon fa-solid fa-users"></i>
              <p>
                <%= t(".users") %>
              </p>
            </a>
          </li>
          <li class="nav-item">
            <a href="<%= admin_site_path %>" class="nav-link<%= " active" if controller.controller_name == "sites" %>">
              <i class="nav-icon fa-solid fa-sitemap"></i>
              <p>
                <%= t(".site") %>
              </p>
            </a>
          </li>
        </ul>
      </nav>
      <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
  </aside>

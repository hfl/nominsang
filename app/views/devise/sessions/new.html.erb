                    <h3 class="title has-text-black">NOMINSANG 3 Login</h3>
                    <hr class="login-hr">
                    <p class="subtitle has-text-black">Please login to proceed.</p>
                    <div class="box">
                        <figure class="avatar">
                            <img src="https://via.placeholder.com/150">
                        </figure>
                        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                            <div class="field">
                                <div class="control">
                                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-large" %>
                                </div>
                            </div>

                            <div class="field">
                                <div class="control">
                                  <%= f.password_field :password, autocomplete: "current-password", class: "input is-large" %>
                                </div>
                            </div>
                              <% if devise_mapping.rememberable? %>
                                <div class="field">
                                  <label class="checkbox">
                                    <%= f.check_box :remember_me %>
                                    Remember me
                                  </label>
                                </div>
                              <% end %>
                            <%= f.submit 'Log in', class: "button is-block is-info is-large is-fullwidth" %>
                        <% end %>
                    </div>
                    <p class="has-text-grey">
                      <%= render "devise/shared/links" %>
                    </p>

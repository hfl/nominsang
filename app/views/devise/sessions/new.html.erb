                    <h3 class="title has-text-black">NOMINSANG 3</h3>
                    <hr class="login-hr">
                    <p class="subtitle has-text-black"><%= t(".please_login_to_proceed") %></p>
                    <div class="box">
                        <figure class="avatar">
                          <%= image_tag "Mongolian-Traditional-Calligraphy.png", size: '120x120' %>
                        </figure>
                        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                            <div class="field">
                                <div class="control">
                                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-large", placeholder: t(".email") %>
                                </div>
                            </div>

                            <div class="field">
                                <div class="control">
                                  <%= f.password_field :password, autocomplete: "current-password", class: "input is-large", placeholder: t(".password") %>
                                </div>
                            </div>
                              <% if devise_mapping.rememberable? %>
                                <div class="field">
                                  <label class="checkbox">
                                    <%= f.check_box :remember_me %>
                                    <%= t(".remember_me") %>
                                  </label>
                                </div>
                              <% end %>
                            <%= f.submit t(".login"), class: "button is-block is-info is-large is-fullwidth" %>
                        <% end %>
                    </div>
                    <p class="has-text-grey">
                      <%= render "devise/shared/links" %>
                    </p>
